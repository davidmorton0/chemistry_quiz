<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-2">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>

  <div class="col-md-10">
    <table class="scoretable">
      <tr>
        <th>Quiz</th>
        <th>Level</th>
        <th>Difficulty</th>
        <th>Your Highest Score</th>
      </tr>
  
      <% @scores.each do |score| %>
        <tr>
          <td><%= link_to score.quiz_type.name, quiz_type_path(score.quiz_type_id) %></td>
          <td><%= score.quiz_type.level %></td>
          <td><%= score.quiz_type.difficulty %></td>
          <td><%= "#{score.score} / #{score.quiz_type.num_questions}" %></td>
        </tr>
      <% end %>
    </table>
  </div>

</div>

